{
  "scopeName": "source.qi",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#keyword-literals" },
    { "include": "#special-forms" },
    { "include": "#operators" },
    { "include": "#constants" },
    { "include": "#functions" },
    { "include": "#modules" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "match": ";.*$",
          "name": "comment.line.semicolon.qi"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.triple.fstring.qi",
          "begin": "f\"\"\"",
          "end": "\"\"\"",
          "patterns": [
            { "include": "#string-interpolation" },
            { "include": "#string-escape" }
          ]
        },
        {
          "name": "string.quoted.triple.qi",
          "begin": "\"\"\"",
          "end": "\"\"\"",
          "patterns": [
            { "include": "#string-escape" }
          ]
        },
        {
          "name": "string.quoted.double.fstring.qi",
          "begin": "f\"",
          "end": "\"",
          "patterns": [
            { "include": "#string-interpolation" },
            { "include": "#string-escape" }
          ]
        },
        {
          "name": "string.quoted.double.qi",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "include": "#string-escape" }
          ]
        }
      ]
    },
    "string-escape": {
      "patterns": [
        {
          "match": "\\\\[nrt\\\\\"{}]",
          "name": "constant.character.escape.qi"
        }
      ]
    },
    "string-interpolation": {
      "patterns": [
        {
          "name": "meta.embedded.qi",
          "begin": "\\{",
          "end": "\\}",
          "patterns": [
            { "include": "$self" }
          ],
          "beginCaptures": {
            "0": { "name": "punctuation.section.embedded.begin.qi" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.section.embedded.end.qi" }
          }
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "match": "-?\\b[0-9]+(\\.[0-9]+)?\\b",
          "name": "constant.numeric.qi"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "match": "\\b(def|defn|defn-|fn|let|if|do|when|while|until|while-some|until-error|each|match|try|defer|loop|recur|mac|flow|quote|quasiquote|unquote|unquote-splice|use|export|module)\\b",
          "name": "keyword.control.qi"
        }
      ]
    },
    "keyword-literals": {
      "patterns": [
        {
          "match": ":[a-zA-Z_][a-zA-Z0-9\\-_]*",
          "name": "constant.other.keyword.qi"
        }
      ]
    },
    "special-forms": {
      "patterns": [
        {
          "match": "\\b(nil\\?|some\\?|list\\?|vector\\?|map\\?|string\\?|integer\\?|float\\?|number\\?|keyword\\?|function\\?|atom\\?|coll\\?|sequential\\?|empty\\?|true\\?|false\\?|even\\?|odd\\?|positive\\?|negative\\?|zero\\?)\\b",
          "name": "support.function.predicate.qi"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "match": "\\|>\\?|\\|\\|>|\\|>|~>",
          "name": "keyword.operator.pipeline.qi"
        },
        {
          "match": "->|=>",
          "name": "keyword.operator.arrow.qi"
        },
        {
          "match": "\\.\\.\\.",
          "name": "keyword.operator.spread.qi"
        },
        {
          "match": "(\\+|-|\\*|\\/|%|=|!=|<=|>=|<|>)",
          "name": "keyword.operator.arithmetic.qi"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "match": "\\b(nil|true|false)\\b",
          "name": "constant.language.qi"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "match": "\\b(atom|deref|swap!|reset!|print|println|error|tap)\\b",
          "name": "support.function.builtin.qi"
        },
        {
          "match": "(?<=\\()[a-zA-Z_][a-zA-Z0-9\\-/!?]*",
          "name": "entity.name.function.qi"
        }
      ]
    },
    "modules": {
      "patterns": [
        {
          "match": "\\b(str|list|map|set|math|time|stats|io|path|env|log|go|async|stream|json|yaml|csv|markdown|http|server|db|cmd|args|test|profile|queue|stack|util|zip|temp|flow|jwt|password)(?=/)",
          "name": "support.module.name.qi"
        },
        {
          "match": "[a-z]+/[a-zA-Z0-9\\-!?]+",
          "name": "support.function.module.qi"
        }
      ]
    }
  }
}
