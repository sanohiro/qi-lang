{
  "comments": {
    "lineComment": ";"
  },
  "brackets": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"]
  ],
  "autoClosingPairs": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"],
    ["\"", "\""]
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"],
    ["\"", "\""]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^.*[\\(\\[\\{]\\s*$",
    "decreaseIndentPattern": "^\\s*[\\)\\]\\}]\\s*$"
  },
  "onEnterRules": [
    {
      "beforeText": "^\\s*\\((?:def|defn|defn-|fn|let|if|do|when|while|until|while-some|until-error|each|match|try|defer|loop|recur)\\b",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "^.*[\\(\\[\\{]\\s*$",
      "afterText": "^(?!\\s*[\\|>|~])",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "^\\s*[\\)\\]\\}]",
      "action": {
        "indent": "outdent"
      }
    }
  ],
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9\\-_!?]*"
}