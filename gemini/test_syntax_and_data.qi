; test_syntax_and_data.qi
; このファイルはQi言語の基本的な構文とデータ構造の網羅的なテストです。
; 意図: 様々なリテラルやデータ構造が正しく評価されることを確認します。


(test/run "Comments Test" (fn []
  ; これは一行コメントです。評価時に無視されるはずです。
  (test/assert-eq 1 1) ; 行末コメントも同様に無視されるはずです。
))

(test/run "Numeric Literals Test" (fn []
  ; 意図: 整数、浮動小数点数、負数、アンダースコア区切りが正しく評価されるか。
  (test/assert-eq 42 42)
  (test/assert-eq 3.14 3.14)
  (test/assert-eq -10 -10)
  (test/assert-eq 1000000 1_000_000)
))

(test/run "String Literals Test" (fn []
  ; 意図: ダブルクォート、エスケープシーケンス、複数行文字列が正しく機能するか。
  (test/assert-eq "hello" "hello")
  (test/assert-eq "hello\nworld" "hello
world")
  (test/assert-eq "say \"hello\"" "say \"hello\"")
  (test/assert-eq "multi-line\nstring" """multi-line
string""")
))

(test/run "f-string Interpolation Test" (fn []
  ; 意図: f-stringが変数や式を正しく展開できるか。
  (let [name "Qi" value 42 data [1 2]]
    (test/assert-eq "Hello, Qi!" f"Hello, {name}!")
    (test/assert-eq "Value is 42" f"Value is {value}")
    (test/assert-eq "Calculation: 6" f"Calculation: {(* 2 3)}")
    (test/assert-eq "Data: [1 2]" f"Data: {data}")
    (test/assert-eq "Escaped: {name}" f"Escaped: \{name\}"))
))

(test/run "Boolean and Nil Literals Test" (fn []
  ; 意図: true, false, nilがそれぞれ正しい値として評価され、if文で期待通りに動作するか。
  (test/assert-eq true true)
  (test/assert-eq false false)
  (test/assert-eq nil nil)
  (test/assert-eq "no" (if nil "yes" "no"))
  (test/assert-eq "no" (if false "yes" "no"))
  (test/assert-eq "yes" (if 0 "yes" "no")) ; 0はtruthy
  (test/assert-eq "yes" (if "" "yes" "no")) ; 空文字列はtruthy
))

(test/run "Keyword Test" (fn []
  ; 意図: キーワードがリテラルとして、またマップアクセスのための関数として機能するか。
  (let [user {:name "Alice" :age 30}]
    (test/assert-eq :name :name)
    (test/assert-eq "Alice" (:name user))
    (test/assert-eq 30 (:age user))
    (test/assert-eq nil (:email user)) ; 存在しないキーはnilを返す
  )
))

(test/run "Vector Literals Test" (fn []
  ; 意図: 空、単一要素、複数要素、混合型、ネストしたベクターが正しく構築されるか。
  (test/assert-eq [] [])
  (test/assert-eq [1] [1])
  (test/assert-eq [1 2 3] [1, 2, 3,]) ; 末尾のカンマは許容されるべき
  (test/assert-eq [1 "a" true] [1 "a" true])
  (test/assert-eq [[1 2] [3 4]] [[1 2] [3 4]])
))

(test/run "Map Literals Test" (fn []
  ; 意図: 空、キーワードキー、文字列キー、混合値、ネストしたマップが正しく構築されるか。
  (test/assert-eq {} {})
  (test/assert-eq {:a 1 :b 2} {:a 1, :b 2,}) ; 末尾のカンマ
  (test/assert-eq {"a" 1} {"a" 1})
  (test/assert-eq {:data [1 2] :meta {:status "ok"}} {:data [1 2] :meta {:status "ok"}})
))

(test/run "List (Quoted) Literals Test" (fn []
  ; 意図: クォートされたリストが評価されずにデータ構造として構築されるか。
  (test/assert-eq '() '())
  (test/assert-eq '(1 2 3) '(1 2 3))
  (test/assert-eq '(+ 1 2) '(+ 1 2)) ; 式は評価されない
))

(test/run "Basic Operators Test" (fn []
  ; 意図: 算術、比較、論理演算子が期待通りに動作するか。
  ; 算術
  (test/assert-eq 5 (+ 2 3))
  (test/assert-eq -1 (- 2 3))
  (test/assert-eq 6 (* 2 3))
  (test/assert-eq 2 (/ 6 3))
  (test/assert-eq 1 (% 7 3))
  ; 比較
  (test/assert-eq true (= 5 5))
  (test/assert-eq false (= 5 4))
  (test/assert-eq true (!= 5 4))
  (test/assert-eq true (> 5 4))
  (test/assert-eq true (< 4 5))
  (test/assert-eq true (>= 5 5))
  (test/assert-eq true (<= 4 4))
  ; 論理
  (test/assert-eq true (and true true))
  (test/assert-eq false (and true false))
  (test/assert-eq true (or true false))
  (test/assert-eq false (or false false))
  (test/assert-eq false (not true))
  (test/assert-eq true (not false))
))

(test/run "Let Binding Test" (fn []
  ; 意図: letによるローカル変数の束縛、シャドーイング、分解束縛が機能するか。
  (let [x 10 y 20]
    (test/assert-eq 30 (+ x y)))
  (let [a 1]
    (let [a 2] ; シャドーイング
      (test/assert-eq 2 a))
    (test/assert-eq 1 a))
  ; 分解束縛
  (let [[x y] [10 20]]
    (test/assert-eq 30 (+ x y)))
  (let [{:name n :age a} {:name "Alice" :age 30}]
    (test/assert-eq "Alice is 30" f"{n} is {a}"))
  (let [[first ...rest] [1 2 3 4]]
    (test/assert-eq 1 first)
    (test/assert-eq '(2 3 4) rest))
))

(test/run "do Block Test" (fn []
  ; 意図: doブロックが式を順次実行し、最後の式の値を返すか。
  (let [a (atom 0)]
    (let [result (do
                   (swap! a inc)
                   (swap! a + 5)
                   (deref a))]
      (test/assert-eq 6 result)
      (test/assert-eq 6 (deref a)))
  )
))

