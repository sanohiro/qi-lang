; yaml_torture_test.qi
; YAML関数（3個）の torture test
;
; yaml/parse, yaml/stringify, yaml/pretty

(println "========================================")
(println "YAML関数 Torture Test 開始")
(println "========================================")

; ========================================
; Section 1: yaml/parse
; ========================================

(println "\n--- Section 1: yaml/parse ---")

; 1.1 基本動作
(println "\n[1.1] yaml/parse - 基本動作")
(def parse-basic-pass
  (match (yaml/parse "{\"name\":\"test\",\"value\":42}")
    {:ok data} -> (and
                    (map? data)
                    (= (get data "name") "test")
                    (= (get data "value") 42))
    {:error _} -> false))

(if parse-basic-pass
  (println "✓ yaml/parseの基本動作は正しく動作した")
  (println "✗ yaml/parseの基本動作に問題がある"))

; 1.2 配列のパース
(println "\n[1.2] yaml/parse - 配列")
(def parse-array-pass
  (match (yaml/parse "[1,2,3,4,5]")
    {:ok data} -> (and
                    (coll? data)
                    (= (count data) 5)
                    (= (first data) 1))
    {:error _} -> false))

(if parse-array-pass
  (println "✓ yaml/parseの配列パースは正しく動作した")
  (println "✗ yaml/parseの配列パースに問題がある"))

; 1.3 ネストされた構造
(println "\n[1.3] yaml/parse - ネスト")
(def parse-nested-pass
  (match (yaml/parse "{\"user\":{\"name\":\"alice\",\"age\":30}}")
    {:ok data} -> (let [user (get data "user")]
                    (and
                      (map? user)
                      (= (get user "name") "alice")
                      (= (get user "age") 30)))
    {:error _} -> false))

(if parse-nested-pass
  (println "✓ yaml/parseのネスト構造は正しく動作した")
  (println "✗ yaml/parseのネスト構造に問題がある"))

; ========================================
; Section 2: yaml/stringify
; ========================================

(println "\n--- Section 2: yaml/stringify ---")

; 2.1 基本動作
(println "\n[2.1] yaml/stringify - 基本動作")
(def stringify-basic-pass
  (match (yaml/stringify {:name "test" :value 42})
    {:ok yaml-str} -> (and
                        (string? yaml-str)
                        (> (count yaml-str) 0))
    {:error _} -> false))

(if stringify-basic-pass
  (println "✓ yaml/stringifyの基本動作は正しく動作した")
  (println "✗ yaml/stringifyの基本動作に問題がある"))

; 2.2 配列の文字列化
(println "\n[2.2] yaml/stringify - 配列")
(def stringify-array-pass
  (match (yaml/stringify [1 2 3 4 5])
    {:ok yaml-str} -> (and
                        (string? yaml-str)
                        (str/starts-with? yaml-str "-"))
    {:error _} -> false))

(if stringify-array-pass
  (println "✓ yaml/stringifyの配列文字列化は正しく動作した")
  (println "✗ yaml/stringifyの配列文字列化に問題がある"))

; 2.3 往復変換
(println "\n[2.3] yaml/stringify - 往復変換")
(def stringify-roundtrip-pass
  (match (yaml/stringify {:name "test" :count 100})
    {:ok yaml-str} -> (match (yaml/parse yaml-str)
                        {:ok parsed} -> (and
                                          (= (get parsed "name") "test")
                                          (= (get parsed "count") 100))
                        {:error _} -> false)
    {:error _} -> false))

(if stringify-roundtrip-pass
  (println "✓ yaml/stringifyの往復変換は正しく動作した")
  (println "✗ yaml/stringifyの往復変換に問題がある"))

; ========================================
; Section 3: yaml/pretty
; ========================================

(println "\n--- Section 3: yaml/pretty ---")

; 3.1 基本動作
(println "\n[3.1] yaml/pretty - 基本動作")
(def pretty-basic-pass
  (match (yaml/pretty {:name "test" :value 42})
    {:ok yaml-str} -> (and
                        (string? yaml-str)
                        (> (count yaml-str) 0))
    {:error _} -> false))

(if pretty-basic-pass
  (println "✓ yaml/prettyの基本動作は正しく動作した")
  (println "✗ yaml/prettyの基本動作に問題がある"))

; 3.2 インデント確認
(println "\n[3.2] yaml/pretty - インデント")
(def pretty-indent-pass
  (match (yaml/pretty {:name "test" :nested {:key "value"}})
    {:ok yaml-str} -> (and
                        (string? yaml-str)
                        (str/contains? yaml-str "\n"))
    {:error _} -> false))

(if pretty-indent-pass
  (println "✓ yaml/prettyのインデントは正しく動作した")
  (println "✗ yaml/prettyのインデントに問題がある"))

; ========================================
; Section 4: 統合テスト
; ========================================

(println "\n--- Section 4: 統合テスト ---")

; 4.1 大量データ
(println "\n[4.1] 大量データの処理")
(def bulk-pass
  (let [data (map (fn [i] {:id i :name (str "item" i)}) (range 0 100))]
    (match (yaml/stringify data)
      {:ok yaml-str} -> (match (yaml/parse yaml-str)
                          {:ok parsed} -> (and
                                            (string? yaml-str)
                                            (coll? parsed)
                                            (= (count parsed) 100))
                          {:error _} -> false)
      {:error _} -> false)))

(if bulk-pass
  (println "✓ 大量データの処理は正しく動作した")
  (println "✗ 大量データの処理に問題がある"))

; 4.2 複雑なネスト構造
(println "\n[4.2] 複雑なネスト構造")
(def complex-nest-pass
  (let [data {:users [{:name "alice" :roles ["admin" "user"]}
                      {:name "bob" :roles ["user"]}]
              :config {:debug true :timeout 30}}]
    (match (yaml/stringify data)
      {:ok yaml-str} -> (match (yaml/parse yaml-str)
                          {:ok parsed} -> (map? parsed)
                          {:error _} -> false)
      {:error _} -> false)))

(if complex-nest-pass
  (println "✓ 複雑なネスト構造は正しく動作した")
  (println "✗ 複雑なネスト構造に問題がある"))

; 4.3 stringifyとprettyの一貫性
(println "\n[4.3] stringifyとprettyの一貫性")
(def consistency-pass
  (let [data {:a 1 :b 2}]
    (match (yaml/stringify data)
      {:ok str1} -> (match (yaml/pretty data)
                      {:ok str2} -> (match (yaml/parse str1)
                                      {:ok p1} -> (match (yaml/parse str2)
                                                    {:ok p2} -> (and
                                                                  (= (get p1 "a") (get p2 "a"))
                                                                  (= (get p1 "b") (get p2 "b")))
                                                    {:error _} -> false)
                                      {:error _} -> false)
                      {:error _} -> false)
      {:error _} -> false)))

(if consistency-pass
  (println "✓ stringifyとprettyの一貫性は正しく動作した")
  (println "✗ stringifyとprettyの一貫性に問題がある"))

