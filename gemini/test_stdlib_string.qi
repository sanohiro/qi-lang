; test_stdlib_string.qi
; このファイルはQi言語の文字列標準ライブラリ (str/) のテストです。
; 意図: 豊富な文字列操作関数が仕様通りに動作することを確認します。

(use str)

(test/run "String Search Functions" (fn []
  (test/assert (contains? "hello world" "world"))
  (test/assert (starts-with? "hello" "he"))
  (test/assert (ends-with? "hello" "lo"))
  (test/assert-eq 6 (index-of "hello world" "world"))
  (test/assert-eq 6 (last-index-of "hello hello" "hello"))
))

(test/run "String Case and Trim Functions" (fn []
  (test/assert-eq "HELLO" (upper "hello"))
  (test/assert-eq "hello" (lower "HELLO"))
  (test/assert-eq "Hello" (capitalize "hello"))
  (test/assert-eq "Hello World" (title "hello world"))
  (test/assert-eq "hello" (trim "  hello  "))
  (test/assert-eq "hello  " (trim-left "  hello  "))
  (test/assert-eq "  hello" (trim-right "  hello  "))
  (test/assert-eq "---" (repeat "-" 3))
))

(test/run "String Case Conversion" (fn []
  (test/assert-eq "user_name" (snake "userName"))
  (test/assert-eq "userName" (camel "user_name"))
  (test/assert-eq "user-name" (kebab "userName"))
  (test/assert-eq "UserName" (pascal "user_name"))
))

(test/run "String Split and Join" (fn []
  (test/assert-eq ["a" "b" "c"] (split "a,b,c" ","))
  (test/assert-eq ["hello" "world"] (lines "hello\nworld"))
  (test/assert-eq ["hello" "world"] (words "hello world"))
  (test/assert-eq ["h" "e" "l" "l" "o"] (chars "hello"))
  (test/assert-eq "a,b,c" (join "," ["a" "b" "c"]))
))

(test/run "String Replace and Splice" (fn []
  (test/assert-eq "hello qi" (replace "hello world" "world" "qi"))
  (test/assert-eq "cc bb aa" (replace-first "aa bb aa" "aa" "cc"))
  (test/assert-eq "hello universe" (splice "hello world" 6 11 "universe"))
))

(test/run "String Substring Functions" (fn []
  (test/assert-eq "hello" (slice "hello world" 0 5))
  (test/assert-eq "hel" (take "hello" 3))
  (test/assert-eq "llo" (drop "hello" 2))
  (test/assert-eq "user" (sub-before "user@example.com" "@"))
  (test/assert-eq "example.com" (sub-after "user@example.com" "@"))
))

(test/run "String Padding and Truncation" (fn []
  (test/assert-eq "  hi" (pad-left "hi" 4))
  (test/assert-eq "hi  " (pad-right "hi" 4))
  (test/assert-eq " hi " (pad "hi" 4))
  (test/assert-eq "he..." (truncate "hello world" 5))
))

(test/run "String Validation Functions" (fn []
  (test/assert (digit? "123"))
  (test/assert (not (digit? "123a")))
  (test/assert (alpha? "abc"))
  (test/assert (not (alpha? "abc1")))
  (test/assert (alnum? "abc1"))
  (test/assert (not (alnum? "abc1!")))
  (test/assert (lower? "abc"))
  (test/assert (upper? "ABC"))
  (test/assert (space? " \t\n"))
  (test/assert (blank? "  "))
  (test/assert (not (blank? " a ")))
))

(test/run "String URL/Web Functions" (fn []
  (test/assert-eq "hello-world" (slugify "Hello World"))
  (test/assert-eq "hello%20world" (url-encode "hello world"))
  (test/assert-eq "hello world" (url-decode "hello%20world"))
  (test/assert-eq "&lt;div&gt;" (html-encode "<div>"))
  (test/assert-eq "<div>" (html-decode "&lt;div&gt;"))
))

(test/run "String Encoding Functions" (fn []
  (test/assert-eq "aGVsbG8=" (to-base64 "hello"))
  (test/assert-eq "hello" (from-base64 "aGVsbG8="))
))

(test/run "String Parsing Functions" (fn []
  (test/assert-eq 123 (parse-int "123"))
  (test/assert-eq 3.14 (parse-float "3.14"))
))

(test/run "String Formatting Functions" (fn []
  (test/assert-eq "Hello, World!" (format "Hello, {}!" "World"))
  (test/assert-eq "1 + 2 = 3" (format "{} + {} = {}" 1 2 3))
  (test/assert-eq "3.14" (format-decimal 2 3.14159))
  (test/assert-eq "1,234,567" (format-comma 1234567))
  (test/assert-eq "12.3%" (format-percent 1 0.123))
))