
; test_concurrency.qi
; このファイルはQi言語の並行・並列処理機能のテストです。
; 意図: go, chan, atom, pmap などが仕様通りに動作することを確認します。


(test/run "go and chan basic" (fn []
  ; 意図: goroutineを起動し、チャネル経由で基本的な値の送受信ができるか。
  (def ch (chan))
  (go (send! ch 42))
  (def result (recv! ch))
  (test/assert-eq 42 result)

  (def ch-buf (chan 1))
  (send! ch-buf "buffered")
  (test/assert-eq "buffered" (recv! ch-buf))
))

(test/run "channel close" (fn []
  ; 意図: チャネルをクローズした後の受信がnilになるか。
  (def ch (chan 2))
  (send! ch 1)
  (send! ch 2)
  (close! ch)
  (test/assert-eq 1 (recv! ch))
  (test/assert-eq 2 (recv! ch))
  (test/assert-eq nil (recv! ch)) ; クローズ後はnil
  (test/assert-eq nil (recv! ch)) ; 何度受信してもnil
))

(test/run "atom state management" (fn []
  ; 意図: atom, deref(@), reset!, swap! が正しく状態を管理できるか。
  (def my-atom (atom 0))
  (test/assert-eq 0 (deref my-atom))
  (test/assert-eq 0 @my-atom) ; @によるderef

  (reset! my-atom 10)
  (test/assert-eq 10 @my-atom)

  (swap! my-atom inc) ; 10 -> 11
  (test/assert-eq 11 @my-atom)

  (swap! my-atom + 9) ; 11 -> 20
  (test/assert-eq 20 @my-atom)
))

(test/run "atom concurrency safety" (fn []
  ; 意図: 複数のgoroutineから同時にswap!を呼んでも、アトミックに処理されるか。
  (def counter (atom 0))
  (def num-goroutines 100)
  (def ch (chan num-goroutines))

  ; 100個のgoroutineを起動して、それぞれがカウンターを1回インクリメントする
  (dotimes [i num-goroutines]
    (go (do
          (sleep (rand-int 1 5)) ; 実行順序をランダムにする
          (swap! counter inc)
          (send! ch true))))

  ; すべてのgoroutineの完了を待つ
  (dotimes [i num-goroutines]
    (recv! ch))

  (test/assert-eq num-goroutines @counter)
))

(test/run "pmap for parallel collection processing" (fn []
  ; 意図: pmapがコレクションの各要素を並列に処理し、正しい結果を返すか。
  (def result ([1 2 3 4 5] |> (pmap (fn [x] (* x x))) |> sort))
  (test/assert-eq '(1 4 9 16 25) result)

  (def result2 (["a" "b" "c"] |> (pmap str/upper) |> sort))
  (test/assert-eq '("A" "B" "C") result2)
))

(test/run "select! for multiple channels" (fn []
  ; 意図: select!が複数のチャネルを待ち受け、最初に応答があったチャネルから受信できるか。
  (def ch1 (chan))
  (def ch2 (chan))
  (def result (atom nil))

  (go (do (sleep 20) (send! ch1 "from 1")))
  (go (do (sleep 10) (send! ch2 "from 2")))

  (select!
    ch1 (fn [val] (reset! result val))
    ch2 (fn [val] (reset! result val)))

  ; ch2 の方が速いので、ch2から受信するはず
  (test/assert-eq "from 2" @result)

  ; 2回目のselect!でch1から受信する
  (select!
    ch1 (fn [val] (reset! result val))
    ch2 (fn [val] (reset! result val)))
  (test/assert-eq "from 1" @result)
))

(test/run "async/await basic" (fn []
  ; 意図: async/awaitパターンが機能するか。
  (def p (go (fn [] (+ 10 20))))
  (def result (async/await p))
  (test/assert-eq 30 result)
))
