;; Testing Functions (9 functions - test/*)

(def __doc__test/assert-eq
  {:desc "Asserts that two values are equal."
   :params [{:name "expected" :type "any" :desc "Expected value"}
            {:name "actual" :type "any" :desc "Actual value"}
            {:name "message" :type "string" :desc "Message (optional)"}]
   :returns {:type "nil" :desc "Always returns nil (throws error on failure)"}
   :examples ["(test/assert-eq 4 (+ 2 2))"
              "(test/assert-eq \"hello\" (str/lower \"HELLO\") \"String conversion\")"]})

(def __doc__test/assert-ne
  {:desc "Asserts that two values are not equal."
   :params [{:name "not-expected" :type "any" :desc "Value that should not be equal"}
            {:name "actual" :type "any" :desc "Actual value"}
            {:name "message" :type "string" :desc "Message (optional)"}]
   :returns {:type "nil" :desc "Always returns nil (throws error on failure)"}
   :examples ["(test/assert-ne 5 (+ 2 2))"]})

(def __doc__test/assert-true
  {:desc "Asserts that a value is truthy."
   :params [{:name "value" :type "any" :desc "Value to test"}
            {:name "message" :type "string" :desc "Message (optional)"}]
   :returns {:type "nil" :desc "Always returns nil (throws error on failure)"}
   :examples ["(test/assert-true (> 5 3))"
              "(test/assert-true (even? 4) \"4 is even\")"]})

