;; Standard Library Documentation (English)
;; Testing Functions

;; Test Assertions
(def __doc__test/assert
  {:desc "Assert that expression is truthy"
   :params [{:name "expr" :type "any" :desc "Expression to test"}
            {:name "msg" :type "string" :desc "Optional failure message"}]
   :returns {:type "boolean" :desc "true if passes"}
   :examples ["(test/assert (= 1 1) \"Should be equal\")"
              "(test/assert (> 5 3))"]})

(def __doc__test/assert-eq
  {:desc "Assert that two values are equal"
   :params [{:name "expected" :type "any" :desc "Expected value"}
            {:name "actual" :type "any" :desc "Actual value"}
            {:name "msg" :type "string" :desc "Optional failure message"}]
   :returns {:type "boolean" :desc "true if equal"}
   :examples ["(test/assert-eq 42 (+ 40 2))"
              "(test/assert-eq \"hello\" (str \"hel\" \"lo\"))"]})

(def __doc__test/assert-not
  {:desc "Assert that expression is falsy"
   :params [{:name "expr" :type "any" :desc "Expression to test"}
            {:name "msg" :type "string" :desc "Optional failure message"}]
   :returns {:type "boolean" :desc "true if passes"}
   :examples ["(test/assert-not (= 1 2))"
              "(test/assert-not nil)"]})

;; Test Management
(def __doc__test/run-all
  {:desc "Run all registered tests"
   :returns {:type "map" :desc "Test results summary"}
   :examples ["(test/run-all)"]})

(def __doc__test/clear
  {:desc "Clear all registered tests"
   :returns {:type "nil" :desc "nil"}
   :examples ["(test/clear)"]})
