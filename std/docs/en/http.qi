   :params [{:name "url" :type "string" :desc "Request URL"}
            {:name "opts" :type "map" :desc "Optional request options"}]
   :returns {:type "stream" :desc "Response stream"}
   :examples ["(http/get-stream \"https://example.com/large-file.zip\")"]})

(def __doc__http/post-stream
  {:desc "Make HTTP POST request with streaming body"
   :params [{:name "url" :type "string" :desc "Request URL"}
