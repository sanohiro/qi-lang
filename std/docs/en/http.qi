;; HTTP Client Functions

;; HTTP Methods
(def __doc__http/get
  {:desc "Make HTTP GET request"
   :params [{:name "url" :type "string" :desc "Request URL"}
            {:name "opts" :type "map" :desc "Optional request options"}]
   :returns {:type "map" :desc "HTTP response"}
   :examples ["(http/get \"https://api.example.com/data\")"]})

(def __doc__http/post
